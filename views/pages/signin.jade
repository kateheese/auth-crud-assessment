extends ../layout

block content
  include ../navbars/home
  div.container
    div.row
      div.col-md-4
        h1 Sign In
        if error
          div.errors.alert.alert-danger(role="alert")
            li.text-danger= error
        form(action='/signin' method='POST')
          div.form-group
            label(for='email') Email
            div
              input.form-control(type='email' name='email' id='email')
          div.form-group
            label(for='password') Password
            div
              input.form-control(type='password' name='password' id='password')
          div.form-group
            input.btn.btn-primary(type='submit' value='Sign In')